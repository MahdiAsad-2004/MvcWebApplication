<script>
    
    new SlimSelect({
        select: '.slim-select',
        settings: {
            placeholderText: 'لطفا انتخاب کنید ', 
            searchText: 'موردی یافت نشد',
            searchPlaceholder: 'جست و جو کنید',
        }
    });


    let CkEditor;
    ClassicEditor
        .create(document.querySelector('#ckeditor'))
        .then(editorr => { 
            CkEditor = editorr; 
        })
        .catch(eee => {
            //console.error(eee);
        });

    let IsfilterMenuOpen = false;
    let filterMenuHeader = document.getElementsByClassName('filter-menu-header')[0];
    let filterMenuForm = document.getElementsByClassName('filter-menu-form');
    let filterMenuSubmit = document.getElementById('filter-menu-submit');

    function ToggleFilterMenu() {
        //console.log('toggle');
        //console.log(filterMenuForm);
        //console.log(IsfilterMenuOpen);
        //e.target.parentElement.('filter-menu-form')[0].style.display = IsfilterMenuOpen ? 'none' : 'flex';
        document.getElementsByClassName('filter-menu-form')[0].style.display = IsfilterMenuOpen ? 'none' : 'flex';
        //filterMenuForm.style.display = IsfilterMenuOpen ? 'none' : 'flex';
        IsfilterMenuOpen = !IsfilterMenuOpen;
    }

    let filterMenuInputs = document.getElementsByClassName('filter-menu-input');

    for (var input of filterMenuInputs) {
        input.onfocus = (e) => {
            e.target.style.border = '#0da487 3px solid';
            e.target.previousElementSibling.style.fontWeight = '900';
        };
        input.onblur = (e) => {
            e.target.style.border = '#0da487 1px solid';
            e.target.previousElementSibling.style.fontWeight = '500';
        };
    }

    function GoPage(pageNumber,formId) {
        if (pageNumber && pageNumber > 0) {
            document.getElementById('filter-pageNumber').value = pageNumber;            
            SubmitForm(document.getElementById(formId));
            //document.getElementById('filter-pageNumber').setAttribute('value', '1')
        }
    }

    function SubmitForm(form) {
        //console.log(form.querySelector(`[type='submit']`));
        form.querySelector(`[type='submit']`).click();
    }

    function PreviewImage(event, imgId) {
        var output = document.getElementById(imgId);
        if (event.target.files[0]) {
            output.src = URL.createObjectURL(event.target.files[0]);
            output.classList.remove('d-none');
            output.onload = function () {
                URL.revokeObjectURL(output.src); // free memory
            }
        }
        else { 
            output.classList.add('d-none');
        }
    }

    // console.log(filterMenuForm.querySelector("button[type='submit']"));

</script>

