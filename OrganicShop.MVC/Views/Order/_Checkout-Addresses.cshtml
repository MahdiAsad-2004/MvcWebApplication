@using OrganicShop.Domain.Dtos.AddressDtos
@model List<AddressListDto>
@{
    bool isFirst = true;
}
<div class="row g-4">



    @foreach (var address in Model)
    {
        <div class="col-xxl-6 col-lg-12 col-md-6">
            <div class="delivery-address-box">
                <div>
                    <div class="form-check">
                        @if (isFirst)
                        {
                            <input name="AddressId" value="@address.Id" class="form-check-input" type="radio" checked>
                        }
                        else
                        {
                            <input name="AddressId" value="@address.Id" class="form-check-input" type="radio">
                        }
                    </div>

                    <div class="label">
                        <label>@address.Title</label>
                    </div>

                    <ul class="delivery-address-detail">
                        <li>
                            <h4 class="fw-500">@address.ReceiverName</h4>
                        </li>

                        <li>
                            <p class="text-content">
                                <span class="text-title">آدرس : </span> @address.Text
                            </p>
                        </li>

                        <li>
                            <h6 class="text-content">
                                <span class="text-title">کد پستی : </span> @address.PostCode
                            </h6>
                        </li>

                        <li>
                            <h6 class="text-content mb-0">
                                <span class="text-title">شماره تماس : </span> @address.PhoneNumber
                            </h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        isFirst = false;
    }

    <div class="col-xxl-2 col-lg-4 col-md-2">
        <button type="button" class="btn theme-bg-color text-white btn-sm fw-bold" data-bs-toggle="modal" data-bs-target="#add-address-modal-from">
            <i data-feather="plus" class="me-2"></i> افزودن آدرس جدید
        </button>
    </div>




</div>