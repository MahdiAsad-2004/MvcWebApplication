<!-- log in section start -->
<section class="log-in-section background-image-2 section-b-space">
    <div class="container-fluid-lg w-100">
        <div class="row">
            <div class="col-xxl-6 col-xl-5 col-lg-6 d-lg-block d-none ms-auto">
                <div class="image-contain">
                    <img src="~/site/assets/images/inner-page/log-in.png" class="img-fluid" alt="">
                </div>
            </div>

            <div class="col-xxl-4 col-xl-5 col-lg-6 col-sm-8 mx-auto">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h3>به فست کارت خوش آمدید</h3>
                        <h4>ورود به حساب کاربری</h4>
                    </div>

                    <div class="input-box">
                        <form class="row g-4" id="sign-in-form" action="/account/sign-in" method="post">
                            <div class="col-12 mb-2">
                                <div class="form-floating theme-form-floating log-in-form">
                                    <input asp-for="PhoneNumberOrEmail" type="text" class="form-control" id="phoneNumber" placeholder="آدرس ایمیل خود را وارد کنید">
                                    <label asp-for="PhoneNumberOrEmail"></label>
                                </div>
                                <span asp-validation-for="PhoneNumberOrEmail" class="mt-2 text-danger"></span>
                            </div>

                            <div class="col-12 mb-2">
                                <div class="form-floating theme-form-floating log-in-form">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="رمز عبور خود را وارد کنید">
                                    <label asp-for="Password"></label>
                                </div>
                                <span asp-validation-for="Password" class="mt-2 text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="forgot-box mb-4">
                                    <div class="form-check ps-0 m-0 remember-box">
                                        <input asp-for="RememberMe" class="checkbox_animated check-box" type="checkbox" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            من را به خاطر
                                            بسپار
                                        </label>
                                        <span asp-validation-for="RememberMe" class="mt-2 text-danger"></span>
                                    </div>
                                </div>
                                <a href="/account/forgot-password" class="forgot-password">رمز عبور خود را فراموش کردم</a>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-animation w-100 justify-content-center" type="button" onclick="FetchRequestFormWithId('sign-in-form')">
                                    ورود
                                </button>
                            </div>
                        </form>
                    </div>

