<!-- log in section start -->
<section class="log-in-section section-b-space">
    <div class="container-fluid-lg w-100">
        <div class="row">
            <div class="col-xxl-6 col-xl-5 col-lg-6 d-lg-block d-none ms-auto">
                <div class="image-contain">
                    <img src="~/site/assets/images/inner-page/sign-up.png" class="img-fluid" alt="">
                </div>
            </div>

            <div class="col-xxl-4 col-xl-5 col-lg-6 col-sm-8 mx-auto">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h3>به فست کارت خوش آمدید</h3>
                        <h4>ایجاد حساب کاربری</h4>
                    </div>

                    <div class="input-box">
                        <form class="row g-4" id="sign-up-form" action="/account/sign-up" method="post" data-container-id="view-container">
                            <div class="col-12 mb-4">
                                <div class="form-floating theme-form-floating">
                                    <input asp-for="Name" type="text" class="form-control" id="fullname" placeholder="نام و نام خانوادگی">
                                    <label for="fullname">نام و نام خانوادگی</label>
                                </div>
                                <span asp-validation-for="Name" class="mt-2 text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <div class="form-floating theme-form-floating">
                                    <input asp-for="PhoneNumber" type="text" class="form-control" id="phoneNumber" placeholder="آدرس شماره همراه خود را وارد کنید">
                                    <label for="phoneNumber">شماره همراه</label>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="mt-2 text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <div class="form-floating theme-form-floating">
                                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="آدرس ایمیل خود را وارد کنید">
                                    <label for="email">ایمیل</label>
                                </div>
                                <span asp-validation-for="Email" class="mt-2 text-danger"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <div class="form-floating theme-form-floating">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="رمز عبور خود را وارد کنید">
                                    <label for="password">رمز عبور</label>
                                </div>
                                <span asp-validation-for="Password" class="mt-2 text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <div class="form-floating theme-form-floating">
                                    <input asp-for="PasswordRepeat" type="password" class="form-control" id="password-repeat" placeholder="رمز عبور خود را وارد کنید">
                                    <label for="password-repeat">تکرار رمز عبور</label>
                                </div>
                                <span asp-validation-for="PasswordRepeat" class="mt-2 text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="forgot-box">
                                    <div class="form-check ps-0 m-0 remember-box">
                                        <input class="checkbox_animated check-box" type="checkbox" id="accept-terms-check">
                                        <label class="form-check-label" for="accept-terms-check">
                                            <span>شرایط</span> و <span>قوانین</span> را میپذیرم.
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <button id="submit-sign-up-button" class="btn btn-animation w-100" 
                                    onclick="FetchRequestFormWithId('sign-up-form')" type="button" disabled>ثبت نام</button>
                            </div>
                        </form>
                    </div>

